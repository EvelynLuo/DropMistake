            android:text=""
            android:id="@+id/about_title"
            android:textSize="24sp"
            android:layout_marginBottom="18dp"
            android:textStyle="normal|bold" />
    -->
    <ListView
        android:id="@+id/about_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>